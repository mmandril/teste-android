<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
            android:id="@+id/simulateActivityProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/simulateScrollView"
            android:padding="16dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.088,69"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityResultTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityYieldDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rendimento total de R$ 88,69"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityResult"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityAppliedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/initial_value"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityYieldDescription"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityApplied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityAppliedTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityAppliedTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityGrossTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gross_value"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityAppliedTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityGrossValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityGrossTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityGrossTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityYieldTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yield_value"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityGrossTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityYieldValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityYieldTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityYieldTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityYieldIrTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yield_ir"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityYieldTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityYieldIrValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityYieldIrTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityYieldIrTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityNetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/net_value"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityYieldIrTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityNetValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityNetTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityNetTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityRedemptionDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/redemption_date"
                    android:layout_marginTop="52dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityNetTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityRedemptionDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityRedemptionDateTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityRedemptionDateTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityTotalDayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_days"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityRedemptionDateTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityTotalDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityTotalDayTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityTotalDayTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityMonthlyIncomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_income"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityTotalDayTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityMonthlyIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityMonthlyIncomeTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityMonthlyIncomeTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityCdiTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cdi_net_percent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityMonthlyIncomeTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityCdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityCdiTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityCdiTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityAnnualTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/annual_profitability"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityCdiTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityAnnual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityAnnualTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityAnnualTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityPeriodTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_profitability"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityAnnualTitle"
                    app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/simulateActivityPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/simulate_result_title"
                    tools:text="R$ 1.000,00"
                    app:layout_constraintTop_toTopOf="@+id/simulateActivityPeriodTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/simulateActivityPeriodTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/activitySimulateBtn"
                    android:layout_width="0dp"
                    android:text="@string/simulate_again_btn"
                    android:layout_marginTop="16dp"
                    android:enabled="false"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/simulateActivityPeriod"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>

